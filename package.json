{
  "name": "coursera-ai-instructions-remover",
  "version": "2.0.0",
  "description": "Browser extension to automatically remove AI instruction elements from Coursera",
  "main": "background.js",
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js *.html *.json *.md",
    "format:check": "prettier --check *.js *.html *.json *.md",
    "validate": "npm run lint && npm run format:check",
    "build": "npm run validate && mkdir -p dist && cp -r *.js *.html *.json *.md icons/ dist/",
    "zip": "npm run build && cd dist && zip -r ../coursera-ai-remover.zip .",
    "clean": "rm -rf dist coursera-ai-remover.zip",
    "test": "npm run validate"
  },
  "keywords": [
    "coursera",
    "ai",
    "instructions",
    "remover",
    "extension",
    "chrome",
    "browser"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/S1ii/coursera-ai-instructions-remover.git"
  },
  "bugs": {
    "url": "https://github.com/S1ii/coursera-ai-instructions-remover/issues"
  },
  "homepage": "https://github.com/S1ii/coursera-ai-instructions-remover#readme",
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "chrome": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}